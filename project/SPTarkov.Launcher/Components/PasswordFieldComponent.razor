<MudTextField Immediate="true" @bind-Value="Password" Label="@Title"
              Variant="Variant.Outlined" Margin="Margin.Dense" InputType="@_passwordInput"
              Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="ChangeAdornment"
              AdornmentAriaLabel="Show Password" Required="@IsRequired"/>

@code {
    private string _password = "";

    [Parameter]
    public string Password
    {
        get => _password;
        set
        {
            if (_password == value)
            {
                return;
            }

            _password = value;
            PasswordChanged.InvokeAsync(_password);
        }
    }

    [Parameter]
    public EventCallback<string> PasswordChanged { get; set; }

    [Parameter]
    public bool IsRequired { get; set; }

    [Parameter]
    public string Title { get; set; } = "Password";

    private bool _isShow;
    private InputType _passwordInput = InputType.Password;
    private string _passwordInputIcon = Icons.Material.Filled.VisibilityOff;

    private void ChangeAdornment()
    {
        if (_isShow)
        {
            _isShow = false;
            _passwordInputIcon = Icons.Material.Filled.VisibilityOff;
            _passwordInput = InputType.Password;
        }
        else
        {
            _isShow = true;
            _passwordInputIcon = Icons.Material.Filled.Visibility;
            _passwordInput = InputType.Text;
        }
    }

}
