<MudContainer Class="pa-0">
    <MudLink Color="Color.Default" Underline="Underline.None" Disabled="Disabled" Class="@(GetLinkClasses())" OnClick="SwitchFunc">
        <MudText Class="@(GetTextClasses())">@OptionName</MudText>
        <MudSpacer/>
        <MudSwitch Disabled="Disabled" @bind-Value="@Switch" Color="Color.Tertiary"/>
    </MudLink>
</MudContainer>
@if (AddDiv)
{
    <MudDivider DividerType="DividerType.Middle" Class="ma-0"/>
}

@code {

    private string GetLinkClasses()
    {
        var classes = new CssBuilder()
            .AddClass("d-flex")
            .AddClass("justify-center")
            .AddClass("align-center")
            .AddClass("py-2")
            .AddClass("pl-5");

        if (!Disabled)
        {
            classes.AddClass("cursor-pointer").AddClass("setting-on-hover");
        }

        return classes.Build();
    }

    private string GetTextClasses()
    {
        var classes = new CssBuilder().AddClass("no-select");

        if (Disabled)
        {
            classes.AddClass("disabled-switch");
        }

        return classes.Build();
    }

    [Parameter] public bool Disabled { get; set; }

    [Parameter] public bool AddDiv { get; set; }

    [Parameter] public bool Switch { get; set; }

    [Parameter] public string OptionName { get; set; }

    [Parameter] public Func<Task> SwitchFunc { get; set; }
}
