@page "/"

@inject IDialogService DialogService
@inject ConfigHelper ConfigHelper
@inject LocaleHelper LocaleHelper

<MudContainer Class="px-4 my-2" MaxWidth="MaxWidth.Large">
    <MudContainer Class="pa-0 d-flex justify-space-between pb-4">
        <MudButton Color="Color.Dark" StartIcon="@Icons.Material.Filled.AddToQueue" Size="Size.Medium" OnClick="RunAddTask" Variant="Variant.Filled" IconColor="Color.Success" Class="mud-button-border-copy border-2 border-solid mud-button-inner-text-copy">@(LocaleHelper.Get("home_add_server"))</MudButton>
    </MudContainer>
    <MudGrid>
        @if (_serverList.Any())
        {
            @foreach (var server in _serverList)
            {
                <ServerCardComponent Server="@server" @bind-ServerList="_serverList"/>
            }
        }
        else
        {
            <MudItem sm="12">
                <MudAlert Severity="Severity.Info" Variant="Variant.Filled">@(LocaleHelper.Get("home_add_server_cta"))</MudAlert>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

@code {
    private List<Server> _serverList;

    protected override void OnInitialized()
    {
        _serverList = ConfigHelper.GetConfig().Servers;
        Launcher.App.MainWindow.SetMinimized(false);
        base.OnInitialized();
    }

    private async Task RunAddTask()
    {
        var dialog = await DialogService.ShowAsync<ServerAddDialog>("ServerAddDialog", ConfigHelper.DialogOptions);
        var result = await dialog.Result;

        if (result?.Canceled is false)
        {
            _serverList.Add(result.Data as Server);
            ConfigHelper.SetServers(_serverList);
        }
    }
}
