@page "/"

@inject IDialogService DialogService
@inject ConfigHelper ConfigHelper

<MudContainer Class="px-8 my-2" MaxWidth="MaxWidth.Large">
    <MudContainer Class="pa-0 d-flex justify-space-between pb-4">
        <MudButton Color="Color.Primary" StartIcon="@Icons.Material.Filled.AddToQueue" Size="Size.Large" @onclick="RunAddTask" Variant="Variant.Filled">Add New Server</MudButton>
    </MudContainer>
    <MudGrid>
        @if (serverList.Any())
        {
            @foreach (var server in serverList)
            {
                <ServerCardComponent Server="@server" @bind-ServerList="serverList"/>
            }
        }
        else
        {
            <MudItem sm="12">
                <MudAlert Severity="Severity.Info" Variant="Variant.Filled">Please Add a server using the "Add New Server" button above.</MudAlert>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

@code {
    private List<Server> serverList;

    protected override void OnInitialized()
    {
        serverList = ConfigHelper.GetConfig().Servers;
        Launcher.App.MainWindow.SetMinimized(false);
        base.OnInitialized();
    }

    private async Task RunAddTask()
    {
        var dialog = await DialogService.ShowAsync<ServerAddDialog>("ServerAddDialog", ConfigHelper.DialogOptions);
        var result = await dialog.Result;

        if (result?.Canceled is false)
        {
            serverList.Add(result.Data as Server);
            ConfigHelper.SetServers(serverList);
        }
    }
}
