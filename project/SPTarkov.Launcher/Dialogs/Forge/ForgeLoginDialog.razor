@inject ISnackbar Snackbar
@inject HttpHelper HttpHelper
@inject ILogger<ForgeLoginDialog> Logger

<MudDialog Class="mud-background-gray border-2 border-solid mud-border-lines-default">
    <DialogContent>
        <MudContainer Class="py-4">
            @if (_requestInProgress)
            {
                <MudContainer Class="d-flex flex-column align-center gap-4">
                    <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large"/>
                    <MudText>@_taskText</MudText>
                </MudContainer>
            }
            else
            {
                <MudForm Model="Request" @bind-IsValid="@_success" Class="gap-2 mt-3">
                    <MudTextField Immediate="true" @bind-Value="Request.Email" Label="Email" Variant="Variant.Outlined"
                                  Margin="Margin.Dense" Required="true"/>
                    <PasswordFieldComponent @bind-Password="Request.Password" IsRequired="true"/>
                </MudForm>
            }

            <MudContainer Class="mt-3 d-flex justify-end pa-0 gap-2">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" @onclick="RunLoginTask" Disabled="@_requestInProgress">
                    Login
                </MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Default" @onclick="UserCancelled">Close</MudButton>
            </MudContainer>
        </MudContainer>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    private bool _success;
    private bool _requestInProgress;
    private string _taskText = "";
    private ForgeLoginRequest Request { get; } = new();
    private CancellationTokenSource Token { get; set; }
    private bool UserCancel { get; set; }

    private async Task RunLoginTask()
    {
        bool result;
        _requestInProgress = true;
        try
        {
            result = await CallForge("Trying to login", "Failed to login");
        }
        catch (TaskCanceledException) when (Token.IsCancellationRequested)
        {
            AbortOrFail("Request Timed out!");
            return;
        }
        catch (HttpRequestException)
        {
            AbortOrFail();
            return;
        }
        catch (Exception)
        {
            AbortOrFail();
            return;
        }

        if (result)
        {
            Submit();
            _requestInProgress = false;
        }
    }

    private async Task<bool> CallForge(string taskText = "", string failString = "")
    {
        try
        {
            Token = new CancellationTokenSource(TimeSpan.FromSeconds(10));
            _taskText = taskText;
            StateHasChanged();
            await Task.Delay(20);

            var result = await HttpHelper.ForgeLogin(Request, Token.Token);

            if (result is null)
            {
                Logger.LogError("Forge ForgeLogin result is null");
                return false;
            }

            if (result.Success)
            {
                Logger.LogInformation("Forge ForgeLogin Authenticated");
                HttpHelper.SetApiKey(result.Data?.Token!);
                Token?.Dispose();
                return true;
            }

            switch (result.Code)
            {
                case ForgeResponseMessage.Unauthenticated:
                    Logger.LogWarning("Forge ForgeLogin failed to authenticate");
                    AbortOrFail(failString);
                    return false;
                case ForgeResponseMessage.InvalidCredentials:
                    Logger.LogWarning("Forge ForgeLogin failed, Invalid Credentials");
                    AbortOrFail(failString);
                    return false;
                case ForgeResponseMessage.InvalidEmail:
                    Logger.LogWarning("Forge ForgeLogin failed due to invalid email");
                    AbortOrFail(failString);
                    return false;
                default:
                    Logger.LogWarning($"Forge ForgeLogin ?? {result.Message}");
                    AbortOrFail(failString);
                    return false;
            }
        }
        catch (Exception)
        {
            AbortOrFail();
            return false;
        }
    }

    private void Submit()
    {
        Snackbar.Add($"Logged in to {Request.Email}!", Severity.Success);
        MudDialog.Close();
    }

    private void AbortOrFail(string message = "Error connecting to server!")
    {
        if (!UserCancel)
        {
            Snackbar.Add(message, Severity.Error);
        }

        Token?.Cancel();
        MudDialog.Cancel();
        _requestInProgress = false;
    }

    private void UserCancelled()
    {
        UserCancel = true;
        _requestInProgress = false;
        Token?.Cancel();
        MudDialog.Cancel();
    }

}
