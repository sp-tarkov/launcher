@inject ISnackbar Snackbar
@inject LocaleHelper LocaleHelper

<MudDialog Class="mud-background-gray border-2 border-solid mud-border-lines-default">
    <DialogContent>
        <MudContainer Class="py-4">
            <MudForm Model="Server" @bind-IsValid="@success" Class="gap-2 mt-3">
                <MudTextField Immediate="true" @bind-Value="Server.Name" Label="@(LocaleHelper.Get("server_edit_name"))" Variant="Variant.Outlined" Margin="Margin.Dense"/>
                <MudTextField Immediate="true" @bind-Value="Server.IpAddress" Label="@(LocaleHelper.Get("server_edit_address"))" Required="true" RequiredError="@(LocaleHelper.Get("server_edit_required"))" Variant="Variant.Outlined" Margin="Margin.Dense" Mask="@ipPortMask"/>
            </MudForm>
            <MudContainer Class="mt-3 d-flex justify-end pa-0 gap-2">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto" @onclick="Submit">@(LocaleHelper.Get("server_edit_confirm"))</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Default" @onclick="Cancel">@(LocaleHelper.Get("server_edit_cancel"))</MudButton>
            </MudContainer>
        </MudContainer>
    </DialogContent>
</MudDialog>

@code {
    private bool success;

    private readonly IMask ipPortMask = RegexMask.IPv4(true);

    [Parameter]
    public Server Server { get; set; }

    [CascadingParameter]
    private IMudDialogInstance mudDialog { get; set; }

    protected override void OnInitialized()
    {
        success = !string.IsNullOrEmpty(Server.Name) && !string.IsNullOrEmpty(Server.IpAddress);
        base.OnInitialized();
    }

    private void Submit()
    {
        Snackbar.Add(LocaleHelper.Get("server_edit_success"), Severity.Success);
        mudDialog.Close(DialogResult.Ok(Server));
    }

    private void Cancel()
    {
        mudDialog.Cancel();
    }

}
