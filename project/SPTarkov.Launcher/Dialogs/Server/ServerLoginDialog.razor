@inject ISnackbar Snackbar
@inject StateHelper StateHelper
@inject HttpHelper HttpHelper
@inject LocaleHelper LocaleHelper

<MudDialog Class="mud-background-gray border-2 border-solid mud-border-lines-default">
    <DialogContent>
        <MudContainer Class="py-4">
            <MudContainer Class="d-flex flex-column align-center gap-4">
                <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large"/>
                <MudText>@_taskText</MudText>
            </MudContainer>
            <MudContainer Class="mt-3 d-flex justify-end pa-0 gap-2">
                <MudButton Class="mud-button-border-copy border-2 border-solid mud-button-inner-text-copy ml-auto" Variant="Variant.Filled" Color="Color.Error" OnClick="UserCancelled">@(LocaleHelper.Get("server_login_cancel"))</MudButton>
            </MudContainer>
        </MudContainer>
    </DialogContent>
</MudDialog>

@code {
    private string _taskText = "";

    [Parameter]
    public Server Server { get; set; }

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    private CancellationTokenSource Token { get; set; }
    private bool UserCancel { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await StartLoginTasks();
    }

    private async Task StartLoginTasks()
    {
        try
        {
            StateHelper.SetSelectedServer(Server);
            await CallServer(RequestTask.Ping, LocaleHelper.Get("server_login_task_1"));
            await CallServer(RequestTask.Profiles, LocaleHelper.Get("server_login_task_2"), LocaleHelper.Get("server_login_task_fail_1"));
            await CallServer(RequestTask.Types, LocaleHelper.Get("server_login_task_3"), LocaleHelper.Get("server_login_task_fail_2"));
            await CallServer(RequestTask.Mods, LocaleHelper.Get("server_login_task_4"), LocaleHelper.Get("server_login_task_fail_3"));
        }
        catch (TaskCanceledException) when (Token.IsCancellationRequested)
        {
            AbortOrFail(LocaleHelper.Get("request_timed_out"));
            return;
        }
        catch (HttpRequestException)
        {
            AbortOrFail();
            return;
        }
        catch (Exception)
        {
            AbortOrFail();
            return;
        }

        Submit();
    }

    private async Task CallServer(RequestTask option, string taskText = "", string failString = "")
    {
        bool result;
        Token = new CancellationTokenSource(TimeSpan.FromSeconds(10));
        _taskText = taskText;
        StateHasChanged();

        switch (option)
        {
            case RequestTask.Ping:
            {
                // Add artificial delay to get around opening and closing a dialog too fast
                // Causes an exception that I cant fix.
                // Do it only on Ping so its done once and doesnt look like a blank box
                await Task.Delay(250);
                var returnResult = await HttpHelper.GameServerGet<PingResponse>(RequestUrls.Ping, Token.Token);
                result = returnResult.Response == "Pong!";
                break;
            }
            case RequestTask.Profiles:
            {
                var returnResult = await HttpHelper.GameServerGet<ProfilesResponse>(RequestUrls.Profiles, Token.Token);
                StateHelper.ProfileList = returnResult?.Response!;
                result = true;
                break;
            }
            case RequestTask.Types:
            {
                var returnResult = await HttpHelper.GameServerGet<TypesResponse>(RequestUrls.Types, Token.Token);
                StateHelper.ProfileTypes = returnResult?.Response!;
                result = true;
                break;
            }
            case RequestTask.Mods:
            {
                var returnResult = await HttpHelper.GameServerGet<ModsResponse>(RequestUrls.Mods, Token.Token);
                StateHelper.ModList = returnResult?.Response!;
                result = true;
                break;
            }
            case RequestTask.Profile:
            default:
                throw new ArgumentOutOfRangeException(nameof(option), option, null);
        }

        if (!result)
        {
            AbortOrFail(failString);
            return;
        }

        Token?.Dispose();
    }

    private void AbortOrFail(string message = null)
    {
        message ??= LocaleHelper.Get("server_login_default");

        if (!UserCancel)
        {
            Snackbar.Add(message, Severity.Error);
        }

        StateHelper.LogoutAndDispose();
        Token?.Cancel();
        MudDialog.Cancel();
    }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(Server));
        Snackbar.Add(LocaleHelper.Get("server_login_task_success"), Severity.Success);
    }

    private void UserCancelled()
    {
        UserCancel = true;
        Token?.Cancel();
        MudDialog.Cancel();
    }
}
