@inject ISnackbar Snackbar
@inject LocaleHelper LocaleHelper

<MudDialog Class="mud-background-gray border-2 border-solid mud-border-lines-default">
    <DialogContent>
        <MudContainer Class="py-4">
            <MudText>@(LocaleHelper.Get("server_remove_text"))</MudText>
            <MudContainer Class="mt-3 d-flex justify-end pa-0 gap-2">
                <MudButton Class="mud-button-border-copy border-2 border-solid mud-button-inner-text-copy ml-auto" Variant="Variant.Filled" Color="Color.Error" OnClick="Submit">@(LocaleHelper.Get("server_remove_confirm"))</MudButton>
                <MudButton Class="mud-button-border-copy border-2 border-solid mud-button-inner-text-copy" Variant="Variant.Filled" Color="Color.Default" OnClick="Cancel">@(LocaleHelper.Get("server_remove_cancel"))</MudButton>
            </MudContainer>
        </MudContainer>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance mudDialog { get; set; }

    private void Submit()
    {
        Snackbar.Add(LocaleHelper.Get("server_remove_submit"));
        mudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel()
    {
        mudDialog.Cancel();
    }

}
