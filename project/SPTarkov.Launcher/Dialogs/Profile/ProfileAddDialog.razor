@inject ISnackbar Snackbar
@inject StateHelper StateHelper
@inject HttpHelper HttpHelper
@inject LocaleHelper LocaleHelper

<MudDialog Class="mud-background-gray border-2 border-solid mud-border-lines-default">
    <DialogContent>
        <MudContainer Class="py-4">
            @if (_requestInProgress)
            {
                <MudContainer Class="d-flex flex-column align-center gap-4">
                    <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large"/>
                    <MudText>@_taskText</MudText>
                </MudContainer>
            }
            else
            {
                <MudForm Model="_request" @bind-IsValid="@_success" Class="gap-2 mt-3">
                    <MudSelect @bind-Value="_request.Edition" Variant="Variant.Outlined" Label="@(LocaleHelper.Get("profile_add_edition"))" Margin="Margin.Dense" Dense="true" Required="true">
                        @foreach (var edition in serverEditions)
                        {
                            <MudSelectItem Value="@edition"/>
                        }
                    </MudSelect>
                    <MudTextField Immediate="true" @bind-Value="_request.Username" Label="@(LocaleHelper.Get("profile_add_name"))" Variant="Variant.Outlined" Margin="Margin.Dense" Required="true"/>
                    <PasswordFieldComponent @bind-Password="_request.Password"/>
                    @if (tooltipText != "")
                    {
                        <MudCard Class="pa-2 edition-text" Outlined="true">
                            <MudText>@tooltipText</MudText>
                        </MudCard>
                    }
                </MudForm>
                <MudContainer Class="mt-3 d-flex justify-end pa-0 gap-2">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!_success)" Class="ml-auto" @onclick="RunAddTask">@(LocaleHelper.Get("profile_add_confirm"))</MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Default" @onclick="UserCancelled">@(LocaleHelper.Get("profile_add_cancel"))</MudButton>
                </MudContainer>
            }
        </MudContainer>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance mudDialog { get; set; }

    private bool _success;
    private bool _requestInProgress;
    private string _taskText = "";
    public RegisterRequest _request = new();
    private List<string> serverEditions { get; set; }
    private CancellationTokenSource token { get; set; }
    private bool userCancel { get; set; }
    private string tooltipText => StateHelper.ProfileTypes.GetValueOrDefault(_request.Edition, "");

    protected override void OnInitialized()
    {
        serverEditions = StateHelper.ProfileTypes.Keys.ToList();
        base.OnInitialized();
    }

    private async Task RunAddTask()
    {
        var result = false;
        _requestInProgress = true;
        try
        {
            result = await CallServer(LocaleHelper.Get("profile_add_task_1"), LocaleHelper.Get("profile_add_task_fail"));
        }
        catch (TaskCanceledException e) when (token.IsCancellationRequested)
        {
            AbortOrFail(LocaleHelper.Get("request_timed_out"));
            return;
        }
        catch (HttpRequestException e)
        {
            AbortOrFail();
            return;
        }
        catch (Exception e)
        {
            AbortOrFail();
            return;
        }

        if (result)
        {
            Submit();
            _requestInProgress = false;
        }
    }

    private async Task<bool> CallServer(string taskText = "", string failString = "")
    {
        try
        {
            token = new CancellationTokenSource(TimeSpan.FromSeconds(10));
            _taskText = taskText;
            StateHasChanged();
            await Task.Delay(20);

            var returnResult = await HttpHelper.GameServerPut<RegisterResponse>(RequestUrl.Register, _request, token.Token);
            StateHelper.ProfileList = returnResult.Profiles;
            var result = returnResult.Response;

            if (!result)
            {
                AbortOrFail(failString);
                return false;
            }

            token?.Dispose();
            return true;
        }
        catch (Exception e)
        {
            AbortOrFail();
            return false;
        }
    }

    private void Submit()
    {
        Snackbar.Add($"{LocaleHelper.Get("profile_add_task_success")}: {_request?.Username}!", Severity.Success);
        mudDialog.Close(DialogResult.Ok(true));
    }

    private void AbortOrFail(string? message = null)
    {
        message ??= LocaleHelper.Get("profile_add_task_default");

        if (!userCancel)
        {
            Snackbar.Add(message, Severity.Error);
        }

        token?.Cancel();
        mudDialog.Cancel();
        _requestInProgress = false;
    }

    private void UserCancelled()
    {
        userCancel = true;
        _requestInProgress = false;
        token?.Cancel();
        mudDialog.Cancel();
    }

}
