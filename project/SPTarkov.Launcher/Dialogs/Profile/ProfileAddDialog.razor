@using SPTarkov.Core.SPT
@inject ISnackbar Snackbar
@inject StateHelper StateHelper
@inject HttpHelper HttpHelper
@inject LocaleHelper LocaleHelper

<MudDialog Class="mud-background-gray border-2 border-solid mud-border-lines-default">
    <DialogContent>
        <MudContainer Class="py-4">
            @if (_requestInProgress)
            {
                <MudContainer Class="d-flex flex-column align-center gap-4">
                    <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large"/>
                    <MudText>@_taskText</MudText>
                </MudContainer>
            }
            else
            {
                <MudForm Model="Request" @bind-IsValid="@_success" Class="gap-2 mt-3">
                    <MudSelect @bind-Value="Request.Edition" Variant="Variant.Outlined" Label="@(LocaleHelper.Get("profile_add_edition"))" Margin="Margin.Dense" Dense="true" Required="true" MaxHeight="200">
                        @foreach (var edition in ServerEditions)
                        {
                            <MudSelectItem Value="@edition"/>
                        }
                    </MudSelect>
                    <MudTextField Immediate="true" @bind-Value="Request.Username" Label="@(LocaleHelper.Get("profile_add_name"))" Variant="Variant.Outlined" Margin="Margin.Dense" Required="true"/>
                    @if (TooltipText != "")
                    {
                        <MudCard Class="pa-2 edition-text" Outlined="true">
                            <MudText>@TooltipText</MudText>
                        </MudCard>
                    }
                </MudForm>
                <MudContainer Class="mt-3 d-flex justify-end pa-0 gap-2">
                    <MudButton Class="mud-button-border-copy border-2 border-solid mud-button-inner-text-copy ml-auto" Variant="Variant.Filled" Color="Color.Dark" Disabled="@(!_success)" OnClick="RunAddTask" StartIcon="@Icons.Material.Filled.Add" IconColor="Color.Success">@(LocaleHelper.Get("profile_add_confirm"))</MudButton>
                    <MudButton Class="mud-button-border-copy border-2 border-solid mud-button-inner-text-copy" Variant="Variant.Filled" Color="Color.Dark" OnClick="UserCancelled">@(LocaleHelper.Get("profile_add_cancel"))</MudButton>
                </MudContainer>
            }
        </MudContainer>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    private bool _success;
    private bool _requestInProgress;
    private string _taskText = "";
    public SPTRegisterRequest Request = new();
    private List<string> ServerEditions { get; set; }
    private CancellationTokenSource Token { get; set; }
    private bool UserCancel { get; set; }
    private string TooltipText => StateHelper.ProfileTypes.GetValueOrDefault(Request.Edition, "");

    protected override void OnInitialized()
    {
        ServerEditions = StateHelper.ProfileTypes.Keys.ToList();
        base.OnInitialized();
    }

    private async Task RunAddTask()
    {
        var result = false;
        _requestInProgress = true;
        try
        {
            result = await CallServer(LocaleHelper.Get("profile_add_task_1"), LocaleHelper.Get("profile_add_task_fail"));
        }
        catch (TaskCanceledException) when (Token.IsCancellationRequested)
        {
            AbortOrFail(LocaleHelper.Get("request_timed_out"));
            return;
        }
        catch (HttpRequestException)
        {
            AbortOrFail();
            return;
        }
        catch (Exception)
        {
            AbortOrFail();
            return;
        }

        if (result)
        {
            Submit();
            _requestInProgress = false;
        }
    }

    private async Task<bool> CallServer(string taskText = "", string failString = "")
    {
        try
        {
            Token = new CancellationTokenSource(TimeSpan.FromSeconds(10));
            _taskText = taskText;
            StateHasChanged();
            await Task.Delay(20);

            var returnResult = await HttpHelper.GameServerPut<SPTRegisterResponse>(RequestUrls.Register, Request, Token.Token);
            StateHelper.ProfileList = returnResult.Profiles;
            var result = returnResult.Response;

            if (!result)
            {
                AbortOrFail(failString);
                return false;
            }

            Token?.Dispose();
            return true;
        }
        catch (Exception)
        {
            AbortOrFail();
            return false;
        }
    }

    private void Submit()
    {
        Snackbar.Add($"{LocaleHelper.Get("profile_add_task_success")}: {Request?.Username}!", Severity.Success);
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void AbortOrFail(string message = null)
    {
        message ??= LocaleHelper.Get("profile_add_task_default");

        if (!UserCancel)
        {
            Snackbar.Add(message, Severity.Error);
        }

        Token?.Cancel();
        MudDialog.Cancel();
        _requestInProgress = false;
    }

    private void UserCancelled()
    {
        UserCancel = true;
        _requestInProgress = false;
        Token?.Cancel();
        MudDialog.Cancel();
    }

}
