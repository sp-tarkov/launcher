@inject ISnackbar Snackbar
@inject ILogger<ProfileLoginDialog> Logger
@inject HttpHelper HttpHelper
@inject LocaleHelper LocaleHelper

<MudDialog Class="mud-background-gray border-2 border-solid mud-border-lines-default">
    <DialogContent>
        <MudContainer Class="py-4">
            @if (_requestInProgress)
            {
                <MudContainer Class="d-flex flex-column align-center gap-4">
                    <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large"/>
                    <MudText>@_taskText</MudText>
                </MudContainer>
            }
            else
            {
                <MudForm Model="request" @bind-IsValid="@_success" Class="gap-2 mt-3">
                    <MudTextField Immediate="true" @bind-Value="request.Username" Label="@(LocaleHelper.Get("profile_login_username"))" Variant="Variant.Outlined" Margin="Margin.Dense" Disabled="false" Required="true"/>
                </MudForm>
            }

            <MudContainer Class="mt-3 d-flex justify-end pa-0 gap-2">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" @onclick="RunLoginTask">@(LocaleHelper.Get("profile_login_confirm"))</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Default" @onclick="UserCancelled">@(LocaleHelper.Get("profile_login_cancel"))</MudButton>
            </MudContainer>
        </MudContainer>
    </DialogContent>
</MudDialog>

@code {
    [Parameter]
    public MiniProfile MiniProfile { get; set; }
    [CascadingParameter]
    private IMudDialogInstance mudDialog { get; set; }

    private bool _success;
    private bool _requestInProgress;
    private string _taskText = "";
    private LoginRequest request { get; } = new();
    private CancellationTokenSource token { get; set; }
    private bool userCancel { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (MiniProfile == null)
        {
            return;
        }

        if (MiniProfile != null)
        {
            request.Username = MiniProfile.Username;
        }

        await RunLoginTask();

        await base.OnInitializedAsync();
    }

    private async Task RunLoginTask()
    {
        bool result;
        _requestInProgress = true;
        try
        {
            result = await CallServer(LocaleHelper.Get("profile_login_task_1"), LocaleHelper.Get("profile_login_task_fail"));
        }
        catch (TaskCanceledException e) when (token.IsCancellationRequested)
        {
            AbortOrFail(LocaleHelper.Get("request_timed_out"));
            return;
        }
        catch (HttpRequestException e)
        {
            AbortOrFail();
            return;
        }
        catch (Exception e)
        {
            AbortOrFail();
            return;
        }

        if (result)
        {
            Submit();
            _requestInProgress = false;
        }
    }

    private async Task<bool> CallServer(string taskText = "", string failString = "")
    {
        try
        {
            token = new CancellationTokenSource(TimeSpan.FromSeconds(10));
            _taskText = taskText;
            StateHasChanged();
            await Task.Delay(20);

            var returnResult = await HttpHelper.GameServerPut<LoginResponse>(RequestUrl.Login, request, token.Token);
            var result = returnResult.Response;

            if (!result)
            {
                AbortOrFail(failString);
                return false;
            }

            if (MiniProfile is null) // manual login
            {
                var returnResult2 = await HttpHelper.GameServerPut<ProfileResponse>(RequestUrl.Profile, request, token.Token);
                var result2 = returnResult2.Response;

                if (result2 is null)
                {
                    AbortOrFail(failString);
                    return false;
                }

                MiniProfile = result2;
            }

            token?.Dispose();
            return true;
        }
        catch (Exception e)
        {
            AbortOrFail();
            return false;
        }
    }

    private void Submit()
    {
        Snackbar.Add($"{LocaleHelper.Get("profile_login_task_success")} {MiniProfile?.Username}!", Severity.Success);
        mudDialog.Close(DialogResult.Ok(MiniProfile));
    }

    private void AbortOrFail(string message = null)
    {
        message ??= LocaleHelper.Get("profile_login_task_default");

        if (!userCancel)
        {
            Snackbar.Add(message, Severity.Error);
        }

        token?.Cancel();
        mudDialog.Cancel();
        _requestInProgress = false;
    }

    private void UserCancelled()
    {
        userCancel = true;
        _requestInProgress = false;
        token?.Cancel();
        mudDialog.Cancel();
    }

}
