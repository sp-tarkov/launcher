@inject ISnackbar Snackbar
@inject StateHelper StateHelper
@inject HttpHelper HttpHelper
@inject LocaleHelper LocaleHelper

<MudDialog Class="mud-background-gray border-2 border-solid mud-border-lines-default">
    <DialogContent>
        <MudContainer Class="py-4">
            @if (_requestInProgress)
            {
                <MudContainer Class="d-flex flex-column align-center gap-4">
                    <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large"/>
                    <MudText>@_taskText</MudText>
                </MudContainer>
            }
            else
            {
                <MudText>@(LocaleHelper.Get("profile_remove_text"))</MudText>
                @if (MiniProfile.HasPassword)
                {
                    <PasswordFieldComponent @bind-Password="request.Password"/>
                }

                <MudContainer Class="mt-3 d-flex justify-end pa-0 gap-2">
                    <MudButton Variant="Variant.Filled" Color="Color.Error" Class="ml-auto" @onclick="RunDeleteTask">@(LocaleHelper.Get("profile_remove_confirm"))</MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Default" @onclick="UserCancelled">@(LocaleHelper.Get("profile_remove_cancel"))</MudButton>
                </MudContainer>
            }
        </MudContainer>
    </DialogContent>
</MudDialog>

@code {
    [Parameter]
    public MiniProfile MiniProfile { get; set; }

    [CascadingParameter]
    private IMudDialogInstance _mudDialog { get; set; }

    private bool _success;
    private bool _requestInProgress;
    private string _taskText = "";
    private LoginRequest request { get; } = new();
    private CancellationTokenSource token { get; set; }
    private bool userCancel { get; set; }

    protected override void OnInitialized()
    {
        request.Username = MiniProfile.Username;
        base.OnInitialized();
    }

    private async Task RunDeleteTask()
    {
        bool result;
        _requestInProgress = true;
        try
        {
            result = await CallServer(LocaleHelper.Get("profile_remove_task_1"), LocaleHelper.Get("profile_remove_task_fail"));
        }
        catch (TaskCanceledException _) when (token.IsCancellationRequested)
        {
            AbortOrFail(LocaleHelper.Get("request_timed_out"));
            return;
        }
        catch (HttpRequestException _)
        {
            AbortOrFail();
            return;
        }
        catch (Exception _)
        {
            AbortOrFail();
            return;
        }

        if (result)
        {
            Submit();
            _requestInProgress = false;
        }
    }

    private async Task<bool> CallServer(string taskText = "", string failString = "")
    {
        try
        {
            token = new CancellationTokenSource(TimeSpan.FromSeconds(10));
            _taskText = taskText;
            StateHasChanged();
            await Task.Delay(20);

            var returnResult = await HttpHelper.GameServerPut<RemoveResponse>(RequestUrl.Remove, request, token.Token);
            StateHelper.ProfileList = returnResult.Profiles;
            var result = returnResult.Response;

            if (!result)
            {
                AbortOrFail(failString);
                return false;
            }

            token?.Dispose();
            return true;
        }
        catch (Exception e)
        {
            AbortOrFail();
            return false;
        }
    }

    private void Submit()
    {
        Snackbar.Add($"{LocaleHelper.Get("profile_remove_task_success")}: {MiniProfile?.Username}!", Severity.Success);
        _mudDialog.Close(DialogResult.Ok(MiniProfile));
    }

    private void AbortOrFail(string message = null)
    {
        message ??= LocaleHelper.Get("profile_remove_task_default");

        if (!userCancel)
        {
            Snackbar.Add(message, Severity.Error);
        }

        token?.Cancel();
        _mudDialog.Cancel();
        _requestInProgress = false;
    }

    private void UserCancelled()
    {
        userCancel = true;
        _requestInProgress = false;
        token?.Cancel();
        _mudDialog.Cancel();
    }

}
