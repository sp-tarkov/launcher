@inject ISnackbar _snackbar
@inject StateHelper _stateHelper
@inject HttpHelper _httpHelper
@inject LogHelper _logHelper

<MudDialog Class="mud-background-gray border-2 border-solid mud-border-lines-default">
    <DialogContent>
        <MudContainer Class="py-4">
            @if (requestInProgress)
            {
                <MudContainer Class="d-flex flex-column align-center gap-4">
                    <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large"/>
                    <MudText>@TaskText</MudText>
                </MudContainer>
            }
            else
            {
                <MudText>Do you really want to delete this Profile? This process cannot be undone.</MudText>
                @if (MiniProfile.HasPassword)
                {
                    <PasswordFieldComponent @bind-Password="request.Password"/>
                }

                <MudContainer Class="mt-3 d-flex justify-end pa-0 gap-2">
                    <MudButton Variant="Variant.Filled" Color="Color.Error" Class="ml-auto" @onclick="RunDeleteTask">Delete</MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Default" @onclick="UserCancelled">Cancel</MudButton>
                </MudContainer>
            }
        </MudContainer>
    </DialogContent>
</MudDialog>

@code {
    private bool success;
    private bool requestInProgress;
    private string TaskText = "";
    [Parameter] public MiniProfile MiniProfile { get; set; }
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; }
    private LoginRequest request { get; } = new();
    private CancellationTokenSource token { get; set; }
    private bool UserCancel { get; set; }

    protected override void OnInitialized()
    {
        request.Username = MiniProfile.Username;
        base.OnInitialized();
    }

    private async Task RunDeleteTask()
    {
        var result = false;
        requestInProgress = true;
        try
        {
            result = await CallServer("Deleting profile details from server", "Failed deleting profile details from server");
        }
        catch (TaskCanceledException e) when (token.IsCancellationRequested)
        {
            AbortOrFail("Request Timed out!");
            return;
        }
        catch (HttpRequestException e)
        {
            AbortOrFail();
            return;
        }
        catch (Exception e)
        {
            AbortOrFail();
            return;
        }

        if (result)
        {
            Submit();
            requestInProgress = false;
        }
    }

    private async Task<bool> CallServer(string taskText = "", string failString = "")
    {
        try
        {
            token = new CancellationTokenSource(TimeSpan.FromSeconds(10));
            TaskText = taskText;
            StateHasChanged();
            await Task.Delay(20);

            var returnResult = await _httpHelper.GameServerPut<RemoveResponse>(RequestUrl.Remove, request, token.Token);
            _stateHelper.ProfileList = returnResult.Profiles;
            var result = returnResult.Response;

            if (!result)
            {
                AbortOrFail(failString);
                return false;
            }

            token?.Dispose();
            return true;
        }
        catch (Exception e)
        {
            AbortOrFail();
            return false;
        }
    }

    private void Submit()
    {
        _snackbar.Add($"Deleted profile: {MiniProfile?.Username}!", Severity.Success);
        MudDialog.Close(DialogResult.Ok(MiniProfile));
    }

    private void AbortOrFail(string message = "Error deleting profile from server!")
    {
        if (!UserCancel)
        {
            _snackbar.Add(message, Severity.Error);
        }

        token?.Cancel();
        MudDialog.Cancel();
        requestInProgress = false;
    }

    private void UserCancelled()
    {
        UserCancel = true;
        requestInProgress = false;
        token?.Cancel();
        MudDialog.Cancel();
    }

}
